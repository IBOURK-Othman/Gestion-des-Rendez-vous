<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity"
    android:background="@drawable/pagebkg">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/lavender_border"
            android:layout_margin="0dp"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:fontFamily="@font/barlowcondensedblack"
                android:text="Bienvenue"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/salsa"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="@color/ciel"
                android:text="chargement..."/>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Mes rendez-vous"
                android:textSize="25sp"
                android:fontFamily="@font/cormorantgaramondregular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:background="@drawable/bg_button"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Réserver maintenant"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/cormorantgaramondregular"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:background="@drawable/bg_button"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Contactez-nous"
                android:fontFamily="@font/cormorantgaramondregular"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:background="@drawable/bg_button"
                app:cornerRadius="10dp"/>

            <!-- Add Logout Button -->


            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"
                android:fontFamily="@font/cormorantgaramondregular"
                android:textStyle="bold"
                android:text="Déconnexion"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>




